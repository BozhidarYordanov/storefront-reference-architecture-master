<?xml version="1.0" encoding="UTF-8"?>
<jobs xmlns="http://www.demandware.com/xml/impex/jobs/2015-07-01">

    <job job-id="NotifyMeBackInStockJob" priority="0">
        <description>This job will query all custom objects with id = 'NotifyMeBackInStock'. Loop them and check the product availability. Call Twilio and delete CO if needed.</description>
        <parameters/>
        <flow>
            <context site-id="RefArchGlobal"/>
            <step step-id="NotifyJob" type="custom.NotifyJobStep" enforce-restart="false">
                <description/>
                <parameters/>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-recurring enabled="true">
                <recurrence>
                    <date-from>2022-01-21Z</date-from>
                    <date-to>2022-12-31Z</date-to>
                    <start-time>05:00:00.000Z</start-time>
                    <interval>12h</interval>
                    <day-of-week>
                        <weekday>Saturday</weekday>
                        <weekday>Friday</weekday>
                        <weekday>Wednesday</weekday>
                        <weekday>Sunday</weekday>
                        <weekday>Thursday</weekday>
                        <weekday>Monday</weekday>
                        <weekday>Tuesday</weekday>
                    </day-of-week>
                </recurrence>
            </run-recurring>
        </triggers>
    </job>

</jobs>
